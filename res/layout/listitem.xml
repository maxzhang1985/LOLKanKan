<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:orientation="horizontal" >

    <ImageView
            android:layout_width="115dp"
            android:layout_height="63dp"
            android:id="@+id/ImageUrl"
            android:layout_gravity="center|left"
            android:contentDescription="@string/app_name"  android:layout_marginLeft="0dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/Title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#4767a5"
            android:layout_gravity="center"
            android:textSize="13dp" android:textStyle="bold" android:textIsSelectable="false"/>
        <TextView android:id="@+id/TimeSpan"  android:layout_width="0px"  android:layout_height="0px"/>
        <TextView android:id="@+id/CurrentDate"  android:layout_width="0px"  android:layout_height="0px"/>
    </LinearLayout>

</LinearLayout>